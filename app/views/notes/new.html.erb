<h2 class="btn btn-warning lowerspace">NEW NOTE FOR
	<span class="btn btn-default"><%= link_to "#{@buyer.name}", buyer_path(@buyer) %></span></h2>
<p></p>

	<div id="newnote">
	<%= simple_form_for ([@buyer, @buyer.notes.build]) do |f| %>

		<span class="label">NEW NOTE (limit 255 characters)</span>
		<%= f.input :body, as: :text, input_html: {class: "form-control"} %>

	</div>

	<div class="button">
	  <%= f.button :submit, 'Save Note', :class => 'btn-primary' %>
	</div>

	<% end %>



