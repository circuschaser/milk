<h3>
<% if current_cycle.nil? %>
  <div class="newbutton2">
   <%= link_to "CYCLES HOME", cycles_path, class: "label label-default" %>
  </div>
  MILK RUNS
  <span class="newbutton">
    <%= link_to "NEW CYCLE", new_cycle_path, class: "btn btn-primary" %>
  </span>
<% else %>
  <div class="newbutton2">
    <%= link_to "CURRENT CYCLE" + " " + "#{current_cycle.name}",cycles_path, class: "label label-success" %>
  </div>
  MILK RUNS

  <div class="runtotals2">
    START DATE
    <div class="label label-info"><%= current_cycle.startdate.strftime("%b %Y") %></div>
  </div>

  <div class="runtotals2">
    END DATE
    <div class="label label-info"><%= current_cycle.lastdate.strftime("%b %Y") %></div>
  </div>

  <span class="btn-group newbutton">
    <%= link_to "NEW MILK RUN", new_cycle_milkrun_path(current_cycle), class: "btn btn-primary" %>
    <%= link_to "SETTINGS", edit_cycle_path(current_cycle), class: "btn btn-default" %>
  </span>
<% end %>
</h3>
</br>

<div class="span8">
<table class="table">
  <thead>
    <tr>
      <th>DATE</th>
      <th></th>

      <th>DRIVER</th>

      <th>MILK</th>
      <th>BUTTERMILK</th>
      <th>CREAM</th>

      <th>MILK TOTAL</th>
      <th>GAS</th>

      <th>FREEZER BAGS</th>

      <th>ICE BAGS</th>
      <th>ICE COST</th>

      <th>TOTAL COST</th>
    </tr>
  </thead>
  <tbody>
    <% if !current_cycle.nil? %>

    <% current_cycle.milkruns.each do |m| %>
    <tr>
      <td><%= link_to m.date.strftime("%B %d"), milkrun_path(m) %></td>
      
      <td class="button">
        <% if m.active? %>
          <div class="btn-group btn-group-xs">
            <%= link_to image_tag("icon_check_grn.png"), deactivate_milkrun_path(m), class: "btn btn-default icon" %>
            <%= link_to image_tag("icon_view2.png"), milkrun_path(m), class: "btn btn-info icon_view" %>
            <%= link_to image_tag("icon_edit.png"), edit_milkrun_path(m), class: "btn btn-default icon" %>
            <%= link_to image_tag("icon_delete2.png"), m, class: "btn btn-warning icon",
                method: :delete, data: { confirm: "Do you really want to delete this Milk Run?" } %>
          </div>
        <% else %>
          <div class="btn-group btn-group-xs">
            <%= link_to image_tag("icon_check_gray.png"), activate_milkrun_path(m), class: "btn btn-default icon" %>
            <%= link_to image_tag("icon_edit.png"), edit_milkrun_path(m), class: "btn btn-default icon" %>
            <%= link_to image_tag("icon_delete.png"), m, class: "btn btn-default icon",
                method: :delete, data: { confirm: "Do you really want to delete this Milk Run?" } %>
          </div>
        <% end %>
      </td>
      
      <% driven = m.orders.find_by_driver(true) %>
      <% if !driven.nil? %>
      <td><%= link_to driven.buyer.name, driven.buyer %></td>
      <% else %>
      <td>-</td>
      <% end %>

      <td class="number"><%= m.m_orders %></td>
      <td class="number"><%= m.b_orders %></td>
      <td class="number"><%= m.c_orders %></td>

      <td class="number"><%= price(m.order_total) %></td>

      <% if m.gas == 0 %>
        <td class="number"><span class="label label-danger"><%= link_to price(m.gas), edit_milkrun_path(m) %></span></td>
      <% else %>
        <td class="number"><%= price(m.gas) %></td>
      <% end %>
      
      <td class="number"><%= m.freezer_bags %></td>

      <td class="number"><%= m.ice %></td>
      <td class="number"><%= price(m.ice_cost) %></td>

      <td class="number"><%= price(m.total_cost) %></td>



    </tr>
    <% end %>

    <% else %>
    <tr>
      <td>THERE IS NO CURRENT CYCLE.</td>
    </tr>
    <% end %>

  </tbody>

</table>
</div>

